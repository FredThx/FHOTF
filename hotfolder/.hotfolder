# Fichier de configuration pour FHOTF
#
# Ce fichier doit être nommé '.hotfolder'
# Il s'applique au repertoir dans lequel il est présent
#
# Syntaxe : TOML
#

title = "Hotfolder de test"

#Général information
[hotfolder]
delay = 5
timeout = 600
ignored = ['*.tmp','*.py','*.pyc']
only = ['*.txt']
no_empty_file = false
module = "fonctions.py"

#Actions générées
[actions]

  [actions.move]
  txt2pdf = true
  destination = "./olfa/"
